import java.util.Scanner; 

public class OutputWithVars {
   public static void main(String[] args) {
      Scanner scnr = new Scanner(System.in);
      int userNum = 0;
      int userNum1 = 0;

      System.out.println("Enter integer: ");
      userNum = scnr.nextInt();
      System.out.println("You entered: " + userNum);
      
      int s = userNum * userNum;
      System.out.println(userNum + " squared is " + s);
      
      int c = userNum * userNum * userNum;
      System.out.println("And " + userNum + " cubed is " + c + "!!");
      
      System.out.println("Enter another integer: ");
      userNum1 = scnr.nextInt();
      int t = userNum + userNum1;
      System.out.println(userNum + " + " + userNum1 + " is " + t);
      
      int m = userNum * userNum1;
      System.out.println(userNum + " * " + userNum1 + " is " + m);
      
      return;
   }
}
